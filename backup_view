            form = OrderForm()
            if piece["piece_type"] == "a":
                piece_type_display = "Army"
            else:
                piece_type_display = "Fleet"
                
            form.name = piece_type_display + " " + territories[piece["territory"]]["display_name"]
            
            form.target.name = (piece["territory"] + "target")
            form.target.choices = [(neighbour, neighbour) for neighbour in territories[piece["territory"]]["neighbours"]]
            form.target.name = (piece["territory"] + "name")
            form.object.choices = [(neighbour, neighbour) for neighbour in territories[piece["territory"]]["neighbours"]]
            forms.append(form)